@model MvcSample.Models.UsuarioViewModel
@{
    ViewData["Title"] = "Editar Usuario";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-title">Editar Usuario</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Nombre" style="display: block; margin-bottom: 8px; font-weight: 500; color: #2c3e50;">Nombre Usuario</label>
        <input asp-for="Nombre" class="form-control" style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 6px;" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Correo" style="display: block; margin-bottom: 8px; font-weight: 500; color: #2c3e50;">Correo</label>
        <input asp-for="Correo" type="email" class="form-control" style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 6px;" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Contrase単a" style="display: block; margin-bottom: 8px; font-weight: 500; color: #2c3e50;">Contrase単a</label>
        <input asp-for="Contrase単a" type="password" class="form-control" style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 6px;" />
        <span asp-validation-for="Contrase単a" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label asp-for="Rol" style="display: block; margin-bottom: 8px; font-weight: 500; color: #2c3e50;">Rol</label>
        <select asp-for="Rol" class="form-control" style="width: 100%; padding: 10px; border: 2px solid #ddd; border-radius: 6px;">
            <option value="">Seleccione un rol</option>
            <option value="Administrador">Administrador</option>
            <option value="Coordinador">Coordinador</option>
            <option value="Estudiante">Estudiante</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div style="margin-top: 25px;">
        <button type="submit" class="btn-nuevo">Guardar</button>
        <a asp-action="Index" class="btn-volver" style="margin-left: 10px; padding: 10px 20px; background: #95a5a6; color: white; text-decoration: none; border-radius: 6px; display: inline-block;">Cancelar</a>
    </div>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

