@{
    ViewData["Title"] = "Reservar Sala";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    var equipos = ViewBag.Equipos as List<Domain.Equipo> ?? new List<Domain.Equipo>();
    var salasLibres = ViewBag.SalasLibres as List<Domain.Sala> ?? new List<Domain.Sala>();
    var salaSeleccionada = ViewBag.SalaSeleccionada as string ?? "A";
    var buscar = ViewBag.Buscar as string ?? "";
    var fecha = ViewBag.Fecha as string ?? "";
    var hora = ViewBag.Hora as string ?? "";
}

<div class="search-filter-section">
    <input type="text" class="search-input" placeholder="Buscar Sala" value="@buscar" id="buscarInput" />
    <select class="filter-select" id="fechaSelect">
        <option value="">Fecha</option>
        @if (fecha == "hoy")
        {
            <option value="hoy" selected>Hoy</option>
        }
        else
        {
            <option value="hoy">Hoy</option>
        }
        @if (fecha == "mañana")
        {
            <option value="mañana" selected>Mañana</option>
        }
        else
        {
            <option value="mañana">Mañana</option>
        }
        @if (fecha == "semana")
        {
            <option value="semana" selected>Esta Semana</option>
        }
        else
        {
            <option value="semana">Esta Semana</option>
        }
    </select>
    <select class="filter-select" id="horaSelect">
        <option value="">Hora</option>
        @if (hora == "manana")
        {
            <option value="manana" selected>Mañana</option>
        }
        else
        {
            <option value="manana">Mañana</option>
        }
        @if (hora == "tarde")
        {
            <option value="tarde" selected>Tarde</option>
        }
        else
        {
            <option value="tarde">Tarde</option>
        }
        @if (hora == "noche")
        {
            <option value="noche" selected>Noche</option>
        }
        else
        {
            <option value="noche">Noche</option>
        }
    </select>
</div>

<div class="content-panels">
    <div class="panel">
        <h3 class="panel-title">Sala @salaSeleccionada Reserva de Equipos</h3>
        <table class="equipment-table">
            <thead>
                <tr>
                    <th>Equipos</th>
                    <th>Estado</th>
                    <th>Ubicación</th>
                    <th>Reserva</th>
                </tr>
            </thead>
            <tbody>
                @if (equipos.Any())
                {
                    @foreach (var equipo in equipos)
                    {
                        var estado = equipo.Estado ?? "Libre";
                        var estadoClass = estado switch
                        {
                            "Asignado" => "status-asignado",
                            "Bloqueado" => "status-bloqueado",
                            _ => "status-libre"
                        };
                        var puedeReservar = equipo.Disponible && estado != "Bloqueado";

                        <tr>
                            <td>@equipo.Nombre</td>
                            <td>
                                <span class="status-badge @estadoClass">@estado</span>
                            </td>
                            <td>@equipo.Ubicacion</td>
                            <td>
                                <button class="btn-reservar" 
                                        onclick="reservarEquipo('@equipo.Id', '@equipo.Nombre')" 
                                        @(puedeReservar ? "" : "disabled")>
                                    Reservar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" style="text-align: center; padding: 40px; color: #999;">
                            No hay equipos disponibles en esta sala
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="panel">
        <h3 class="panel-title">Salas Libres</h3>
        @if (salasLibres.Any())
        {
            @foreach (var sala in salasLibres)
            {
                <div class="room-card">
                    <div>
                        <div class="room-name">Sala @sala.Numero @sala.Ubicacion</div>
                        <div style="font-size: 12px; color: #666; margin-top: 5px;">
                            Capacidad: @sala.Capacidad personas
                        </div>
                    </div>
                    <button class="btn-reservar" onclick="reservarSala('@sala.Id', 'Sala @sala.Numero')">
                        Reservar
                    </button>
                </div>
            }
        }
        else
        {
            <div style="text-align: center; padding: 40px; color: #999;">
                No hay salas libres disponibles
            </div>
        }
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        function reservarEquipo(equipoId, equipoNombre) {
            var descripcion = prompt('Ingrese una descripción para la reserva (opcional):');
            if (descripcion === null) return;

            $.ajax({
                url: '@Url.Action("ReservarEquipo", "Student")',
                method: 'POST',
                data: {
                    equipoId: equipoId,
                    descripcion: descripcion || 'Reserva de ' + equipoNombre,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert('Reserva realizada correctamente');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error al realizar la reserva');
                }
            });
        }

        function reservarSala(salaId, salaNombre) {
            var descripcion = prompt('Ingrese una descripción para la reserva (opcional):');
            if (descripcion === null) return;

            $.ajax({
                url: '@Url.Action("ReservarSala", "Student")',
                method: 'POST',
                data: {
                    salaId: salaId,
                    descripcion: descripcion || 'Reserva de ' + salaNombre,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        alert('Reserva realizada correctamente');
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('Error al realizar la reserva');
                }
            });
        }

    </script>
}

