@{
    ViewData["Title"] = "Olvidé Mi Contraseña";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Universidad Santiago de Cali</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .forgot-container {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            padding: 40px;
            width: 100%;
            max-width: 450px;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo-text {
            font-size: 48px;
            font-weight: bold;
            color: #1565c0;
            margin-bottom: 5px;
            letter-spacing: 2px;
        }

        .university-name {
            font-size: 14px;
            color: #1976d2;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .forgot-title {
            font-size: 24px;
            font-weight: 600;
            color: #1565c0;
            text-align: center;
            margin-bottom: 20px;
        }

        .forgot-description {
            text-align: center;
            color: #1565c0;
            margin-bottom: 30px;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #1565c0;
            font-weight: 500;
            font-size: 14px;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #90caf9;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
            background-color: white;
        }

        .form-group input:focus {
            outline: none;
            border-color: #1565c0;
            box-shadow: 0 0 0 3px rgba(21, 101, 192, 0.1);
        }

        .btn-enviar {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(21, 101, 192, 0.3);
            margin-bottom: 15px;
        }

        .btn-enviar:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(21, 101, 192, 0.4);
        }

        .btn-volver {
            width: 100%;
            padding: 12px;
            background: transparent;
            color: #1565c0;
            border: 2px solid #1565c0;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: block;
            text-align: center;
        }

        .btn-volver:hover {
            background: #1565c0;
            color: white;
        }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            color: #1565c0;
            font-size: 14px;
            font-weight: 500;
        }

        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #66bb6a;
        }
    </style>
</head>
<body>
    <div class="forgot-container">
        <div class="logo-section">
            <div class="logo-text">USC</div>
            <div class="university-name">UNIVERSIDAD SANTIAGO DE CALI</div>
        </div>

        <h2 class="forgot-title">Olvidé Mi Contraseña</h2>
        <p class="forgot-description">Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña.</p>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success">
                @ViewBag.Success
            </div>
        }

        <form asp-action="OlvideContraseña" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="correo">Correo Electrónico</label>
                <input type="email" name="correo" id="correo" placeholder="Ingrese su correo electrónico" required />
            </div>

            <button type="submit" class="btn-enviar">Enviar</button>
        </form>

        <a asp-action="Login" asp-controller="Auth" class="btn-volver">Volver al Login</a>

        <div class="footer-text">
            Universidad Santiago de Cali
        </div>
    </div>
</body>
</html>

