@{
    ViewData["Title"] = "Login";
}

<h2>Login / Registro</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@if (ViewBag.RegisterError != null)
{
    <div class="alert alert-danger">@ViewBag.RegisterError</div>
}

@if (ViewBag.RegisterSuccess != null)
{
    <div class="alert alert-success">@ViewBag.RegisterSuccess</div>
}

<div class="row">
    <!-- FORM LOGIN -->
    <div class="col-md-6">
        <h3>Iniciar sesión</h3>
        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="form-group">
                <label for="username">Usuario</label>
                <input type="text" name="username" class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" name="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary mt-2">Entrar</button>
        </form>
    </div>

    <!-- FORM REGISTRO -->
    <div class="col-md-6">
        <h3>Registrarse</h3>
        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="form-group">
                <label for="newUsername">Usuario</label>
                <input type="text" name="newUsername" class="form-control" />
            </div>

            <div class="form-group">
                <label for="newPassword">Contraseña</label>
                <input type="password" name="newPassword" class="form-control" />
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmar contraseña</label>
                <input type="password" name="confirmPassword" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success mt-2">Crear cuenta</button>
        </form>
    </div>
</div>
