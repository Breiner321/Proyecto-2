@model MvcSample.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Sin layout para tener control total del diseño
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Universidad Santiago de Cali</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .login-container {
            background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            padding: 40px;
            width: 100%;
            max-width: 450px;
            position: relative;
        }

        .logo-section {
            text-align: center;
            margin-bottom: 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .logo-section img {
            margin: 0 auto;
            display: block;
        }

        .logo-text {
            font-size: 48px;
            font-weight: bold;
            color: #1565c0;
            margin-bottom: 5px;
            letter-spacing: 2px;
        }

        .university-name {
            font-size: 14px;
            color: #1976d2;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .login-title {
            font-size: 28px;
            font-weight: 600;
            color: #1565c0;
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #1565c0;
            font-weight: 500;
            font-size: 14px;
        }

        .input-wrapper {
            position: relative;
        }

        .input-wrapper input {
            width: 100%;
            padding: 12px 50px 12px 15px;
            border: 2px solid #90caf9;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
            background-color: white;
        }

        .input-wrapper input:focus {
            outline: none;
            border-color: #1565c0;
            box-shadow: 0 0 0 3px rgba(21, 101, 192, 0.1);
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            width: 20px;
            height: 20px;
            pointer-events: none;
        }

        .input-icon svg {
            width: 100%;
            height: 100%;
            fill: #64b5f6;
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            padding: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #64b5f6;
            transition: color 0.3s;
        }

        .toggle-password:hover {
            color: #1565c0;
        }

        .toggle-password:focus {
            outline: none;
        }

        .toggle-password svg {
            width: 20px;
            height: 20px;
            fill: currentColor;
        }

        .form-options {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin-bottom: 25px;
            font-size: 14px;
        }

        .remember-me {
            display: flex;
            align-items: center;
            color: #1565c0;
        }

        .remember-me input[type="checkbox"] {
            margin-right: 8px;
            width: 18px;
            height: 18px;
            cursor: pointer;
        }

        .btn-entrar {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(21, 101, 192, 0.3);
        }

        .btn-entrar:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(21, 101, 192, 0.4);
        }

        .btn-entrar:active {
            transform: translateY(0);
        }

        .footer-text {
            text-align: center;
            margin-top: 30px;
            color: #1565c0;
            font-size: 14px;
            font-weight: 500;
        }

        .alert {
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        .alert-danger {
            background-color: #ffebee;
            color: #c62828;
            border: 1px solid #ef5350;
        }

        .alert-success {
            background-color: #e8f5e9;
            color: #2e7d32;
            border: 1px solid #66bb6a;
        }

        .text-danger {
            color: #c62828;
            font-size: 12px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-section">
            <img src="~/images/logo.png" alt="Logo" id="logoImg" style="max-width: 200px; max-height: 150px; margin-bottom: 15px; display: block;" onerror="this.style.display='none'; document.getElementById('logoTextFallback').style.display='block';" onload="document.getElementById('logoTextFallback').style.display='none';" />
            <div id="logoTextFallback" style="display: block;">
                <div class="logo-text">USC</div>
                <div class="university-name">UNIVERSIDAD SANTIAGO DE CALI</div>
            </div>
        </div>
        <script>
            // Verificar si el logo existe
            var logoImg = document.getElementById('logoImg');
            if (logoImg) {
                logoImg.onload = function() {
                    document.getElementById('logoTextFallback').style.display = 'none';
                };
                logoImg.onerror = function() {
                    this.style.display = 'none';
                    document.getElementById('logoTextFallback').style.display = 'block';
                };
            }
        </script>

        <h2 class="login-title">Login</h2>

        @if (TempData["RegistroExitoso"] != null)
        {
            <div class="alert alert-success">
                @TempData["RegistroExitoso"]
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        }

        <form asp-action="Login" asp-controller="Auth" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Usuario">Usuario</label>
                <div class="input-wrapper">
                    <input asp-for="Usuario" type="text" placeholder="Ingrese su usuario" />
                    <div class="input-icon">
                        <svg viewBox="0 0 24 24">
                            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                        </svg>
                    </div>
                </div>
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contraseña">Contraseña</label>
                <div class="input-wrapper">
                    <input asp-for="Contraseña" type="password" id="passwordInput" placeholder="Ingrese su contraseña" />
                    <button type="button" class="toggle-password" id="togglePassword" aria-label="Mostrar contraseña">
                        <svg id="eyeIcon" viewBox="0 0 24 24" style="display: block;">
                            <!-- Icono de ojo cerrado (por defecto) -->
                            <path d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>
                        </svg>
                        <svg id="eyeOffIcon" viewBox="0 0 24 24" style="display: none;">
                            <!-- Icono de ojo abierto -->
                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="form-options">
                <label class="remember-me">
                    <input asp-for="RecordarContraseña" type="checkbox" />
                    Recordar mi Contraseña
                </label>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <button type="submit" class="btn-entrar">Entrar</button>
        </form>

        <div style="text-align: center; margin-top: 20px;">
            <a asp-action="Registro" asp-controller="Auth" style="color: #1565c0; text-decoration: none; font-weight: 500;">¿No tienes cuenta? Regístrate aquí</a>
        </div>

        <div class="footer-text">
            Universidad Santiago de Cali
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Funcionalidad para mostrar/ocultar contraseña
        document.addEventListener('DOMContentLoaded', function() {
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');
            const eyeOffIcon = document.getElementById('eyeOffIcon');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    // Cambiar iconos
                    if (type === 'text') {
                        eyeIcon.style.display = 'none';
                        eyeOffIcon.style.display = 'block';
                        togglePassword.setAttribute('aria-label', 'Ocultar contraseña');
                    } else {
                        eyeIcon.style.display = 'block';
                        eyeOffIcon.style.display = 'none';
                        togglePassword.setAttribute('aria-label', 'Mostrar contraseña');
                    }
                });
            }
        });
    </script>
</body>
</html>
